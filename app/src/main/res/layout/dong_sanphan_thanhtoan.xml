<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/bevietnampro_regular"

        android:background="@color/white"
        android:padding="7dp">

        <ImageView
            android:id="@+id/imageView_thanhtoan"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="30dp"
            android:padding="5dp"
            android:src="@drawable/trailuu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:fontFamily="@font/bevietnampro_medium"

            android:id="@+id/ten_thanhtoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="Lựu đỏ Thái"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView_thanhtoan"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/thanhtoan_giaSP"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/bevietnampro_medium"
            android:text="100.000"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView_thanhtoan"
            app:layout_constraintTop_toBottomOf="@+id/ten_thanhtoan" />

        <TextView
            android:fontFamily="@font/bevietnampro_medium"

            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:text="đ"
            android:textSize="10dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/thanhtoan_giaSP"
            app:layout_constraintTop_toBottomOf="@+id/ten_thanhtoan" />

        <TextView
            android:id="@+id/thanhtoan_soLuong"

            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/bevietnampro_medium"
            android:gravity="center"
            android:padding="5dp"
            android:text="01"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/giohang_soLuong2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/bevietnampro_medium"
            android:gravity="center"
            android:padding="5dp"
            android:text="Số lượng: "
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@+id/thanhtoan_soLuong"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>