<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A2F3C3">
    tools:context="com.example.webmasterdotnetvn.simpletest.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textColor="#2DA44E"
        android:textSize="30dp"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edthoten"
            android:layout_width="354dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/color"
            android:gravity="center_vertical"
            android:hint="Họ và tên"
            android:paddingHorizontal="30dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edtmatkhau"
            android:layout_width="354dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="Mật khẩu"
            android:textColor="@color/black"
            android:background="@drawable/color"
            android:layout_gravity="center"
            android:paddingHorizontal="30dp"/>

        <EditText
            android:id="@+id/edtemail"
            android:layout_width="354dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="Email "
            android:textColor="@color/black"
            android:background="@drawable/color"
            android:layout_gravity="center"
            android:paddingHorizontal="30dp"/>

        <EditText
            android:id="@+id/edtsdt"
            android:layout_width="354dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="Số điện thoại"
            android:textColor="@color/black"
            android:background="@drawable/color"
            android:layout_gravity="center"
            android:paddingHorizontal="30dp"/>

        <EditText
            android:id="@+id/edtngaysinh"
            android:layout_width="354dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="Ngày sinh yyyy-mm-dd "
            android:textColor="@color/black"
            android:background="@drawable/color"
            android:layout_gravity="center"
            android:paddingHorizontal="30dp"/>

        <EditText
            android:id="@+id/edtgioitinh"
            android:layout_width="354dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="Giới tính "
            android:textColor="@color/black"
            android:background="@drawable/color"
            android:layout_gravity="center"
            android:paddingHorizontal="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp">
        <Button
            android:id="@+id/btnDangKy"
            android:layout_width="354dp"
            android:layout_height="50dp"
            android:background="@drawable/bt_color"
            android:textColor="@color/white"
            android:text="Đăng ký"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/cotaikhoan"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:paddingLeft="20sp"
            android:text="Đã có tài khoản"
            android:textColor="#23834C"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="185dp"
            android:src="@drawable/img_16"
            android:layout_marginLeft="110dp"/>
    </LinearLayout>

</LinearLayout >
