<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/round"
    android:backgroundTint="@color/white"
    >

    <ImageView
        android:id="@+id/imageviewTraicaybaidang"
        android:layout_width="130dp"
        android:layout_height="145dp"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/vegatable" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_toRightOf="@id/imageviewTraicaybaidang"
        android:background="@color/profileedittext"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tenNongsan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageviewTraicaybaidang"
            android:text="Rau xanh"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mieutaNongsan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tenNongsan"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imageviewTraicaybaidang"
            android:text="Được trồng và chăm sóc từ nông trại sạch"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>


</RelativeLayout>