<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/round"
    android:backgroundTint="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginVertical="5dp">

        <ImageView
            android:id="@+id/imageSearchNongSan"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/vegatable" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/profileedittext"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5px">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:id="@+id/tenNongsan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rau xanh"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/bevietnampro_regular"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:id="@+id/searchgiann"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rau xanh"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/bevietnampro_regular"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/mieutaNongsan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tenNongsan"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imageviewTraicaybaidang"
                android:fontFamily="@font/bevietnampro_regular"
                android:text="Được trồng và chăm sóc từ nông trại sạch"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>




</RelativeLayout>