            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_hinhtron"
                android:src="@drawable/raucaixanh" />

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_hinhtron"
                android:src="@drawable/potatoes_image" />

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_hinhtron"
                android:src="@drawable/garlics" />

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_hinhtron"
                android:src="@drawable/otngot" />

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_hinhtron"
                android:src="@drawable/onions" />

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_hinhtron"
                android:src="@drawable/traidau" />

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_hinhtron"
                android:src="@drawable/pineapple" />


        </LinearLayout>
    </HorizontalScrollView>

