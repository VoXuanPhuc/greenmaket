<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_margin="10dp"
        android:padding="2dp"

   >

        <ImageView
            android:id="@+id/hinhanhchitiet_hoaDon"
            android:layout_width="39dp"
            android:layout_height="33dp"
            android:layout_marginStart="24dp"

            android:src="@drawable/pngegg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.333" />

        <TextView
            android:id="@+id/tenSanPham_CTHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="4dp"
            android:text="Chuối Tươi"
            android:textColor="#000000"
            android:textSize="15dp"

            app:layout_constraintStart_toEndOf="@+id/hinhanhchitiet_hoaDon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Tsl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:text="Số lượng:"
            android:textColor="#414141"
            android:textSize="10dp"

            app:layout_constraintStart_toEndOf="@+id/hinhanhchitiet_hoaDon"
            app:layout_constraintTop_toBottomOf="@+id/tenSanPham_CTHD" />

        <TextView
            android:id="@+id/soLuowng_CTHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="5"
            android:textColor="#000000"
            android:textSize="10dp"

            app:layout_constraintStart_toEndOf="@+id/Tsl"
            app:layout_constraintTop_toBottomOf="@+id/tenSanPham_CTHD" />

        <TextView
            android:id="@+id/tong_CTHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:text="1250.000"
            android:textColor="#7C0000"
            android:textSize="7dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="28dp"
            android:text="đ"
            android:textColor="@color/black"
            android:textSize="7dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tong_CTHD"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="228dp"
            android:layout_marginTop="28dp"
            android:text="Thành tiền:"
            android:textColor="#414141"
            android:textSize="7dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/hinhanhchitiet_hoaDon"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>