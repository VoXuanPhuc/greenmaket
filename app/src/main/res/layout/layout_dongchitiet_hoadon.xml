<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        android:padding="12dp"

        android:background="@drawable/bg_dong_hoadon">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:text="VND"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tong_CTHD"
            app:layout_constraintTop_toBottomOf="@+id/tdg" />

        <ImageView
            android:id="@+id/hinhanhchitiet"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pngegg"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tenSanPham_CTHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Chuối Tươi"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/hinhanhchitiet"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/moTa_CTHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="(Miêu tả)"
            android:textColor="#4A4A4A"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/tenSanPham_CTHD"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Tsl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="15dp"
            android:text="Số lượng"
            android:textColor="#414141"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/hinhanhchitiet"
            app:layout_constraintTop_toBottomOf="@+id/tenSanPham_CTHD" />

        <TextView
            android:id="@+id/tdg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="15dp"
            android:text="Đơn giá"
            android:textColor="#414141"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/hinhanhchitiet"
            app:layout_constraintTop_toBottomOf="@+id/Tsl" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="15dp"
            android:text="Tổng"
            android:textColor="#414141"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/hinhanhchitiet"
            app:layout_constraintTop_toBottomOf="@+id/tdg" />

        <TextView
            android:id="@+id/soLuowng_CTHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:text="5"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/Tsl"
            app:layout_constraintTop_toBottomOf="@+id/tenSanPham_CTHD" />

        <TextView
            android:id="@+id/donGia_CTHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:text="25.000"
            android:textColor="#038500"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tdg"
            app:layout_constraintTop_toBottomOf="@+id/Tsl">

        </TextView>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="VND"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/donGia_CTHD"
            app:layout_constraintTop_toBottomOf="@+id/Tsl" />

        <TextView
            android:id="@+id/tong_CTHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="4dp"
            android:text="1250.000"
            android:textColor="#7C0000"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/tdg">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>