<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_profile"
    android:background="@drawable/bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/bg_profile"></ImageView>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:src="@drawable/avatar"
            app:shapeAppearanceOverlay="@style/Circular" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/bevietnampro_regular"
            android:text=""
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:paddingHorizontal="15dp">

        <Button
            android:id="@+id/editProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/profileedittext"
            android:drawableStart="@drawable/infoedit"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:text="  Cập nhật thông tin cá nhân"
            android:textColor="#FFFFFF"
            android:tint="@color/white"/>

        <Button
            android:id="@+id/hoadon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/profileedittext"
            android:drawableStart="@drawable/hdprofile_icon"
            android:gravity="center_vertical"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:text="  Hóa đơn"
            android:textColor="#FFFFFF"
            android:tint="@android:color/white"/>

        <Button
            android:id="@+id/quanlybd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/profileedittext"
            android:drawableStart="@drawable/hdprofile_icon"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:gravity="center_vertical"
            android:text="   Chính sách bảo mật"
            android:textColor="#FFFFFF"
            android:tint="@android:color/white"
            />
        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/profileedittext"
            android:drawableStart="@drawable/logout"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:gravity="center_vertical"
            android:text="   Đăng Xuất"
            android:textColor="#FFFFFF"
            android:tint="@android:color/white"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:src="@drawable/img" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:itemIconTint="@color/icon_color"
        app:itemRippleColor="#AAAAAA"
        app:menu="@menu/navigation_items">

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>


