<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#A2F3C3">
    tools:context="com.example.webmasterdotnetvn.simpletest.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textColor="#2DA44E"
        android:textSize="30dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="354dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/color"
            android:hint="Email"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:paddingHorizontal="30dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="354dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="Password"
            android:textColor="@color/black"
            android:layout_gravity="center"
            app:passwordToggleEnabled="true"
            android:background="@drawable/color"
            android:paddingHorizontal="20dp"
            android:gravity="center_vertical">

            <com.google.android.material.textfield.TextInputEditText
                android:background="@drawable/color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:ems="15"
                android:paddingBottom="5dp">
            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/btnDangnhap"
            android:layout_width="354dp"
            android:layout_height="50dp"
            android:background="@drawable/bt_color"
            android:textColor="@color/white"
            android:text="Đăng nhập"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/dangky"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="Đăng Ký"
            android:paddingLeft="20sp"
            android:textColor="#23834C"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:paddingLeft="20sp"
            android:text="Quên mật khẩu"
            android:textColor="#23834C"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/img_16"
            android:layout_marginLeft="110dp"/>
    </LinearLayout>

</LinearLayout >
